    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <StackPanel.Resources>
            <Style x:Key="PanelStyle" TargetType="{x:Type DockPanel}">
                <Setter Property="Margin" Value="0,10,0,10" />
            </Style>
        </StackPanel.Resources>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="Name: " />
            <TextBox Name="NameBox" Width="150" HorizontalAlignment="Right" Text="TestPlayer_1"/>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="All player count: " />
            <ComboBox Name="PlayerBox" SelectedIndex="0" Width="80" HorizontalAlignment="Right">
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="4" />
                <ComboBoxItem Content="8" />
            </ComboBox>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="AI player count: " />
            <ComboBox Name="AIBox" SelectedIndex="0" Width="80" HorizontalAlignment="Right">
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
                <ComboBoxItem Content="4" />
                <ComboBoxItem Content="5" />
                <ComboBoxItem Content="6" />
                <ComboBoxItem Content="7" />
                <ComboBoxItem Content="8" />
            </ComboBox>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="AI difficulty: " />
            <ComboBox Name="AIDifficulty" SelectedIndex="0" Width="80" HorizontalAlignment="Right">
                <ComboBoxItem Content="EASY" />
                <ComboBoxItem Content="MEDIUM" />
                <ComboBoxItem Content="HARD" />
            </ComboBox>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="Color count: " />
            <ComboBox Name="ColorBox" SelectedIndex="0" Width="80" HorizontalAlignment="Right">
                <ComboBoxItem Content="4" />
                <ComboBoxItem Content="5" />
                <ComboBoxItem Content="6" />
                <ComboBoxItem Content="7" />
                <ComboBoxItem Content="8" />
                <ComboBoxItem Content="9" />
                <ComboBoxItem Content="10" />
                <ComboBoxItem Content="11" />
                <ComboBoxItem Content="12" />
                <ComboBoxItem Content="13" />
                <ComboBoxItem Content="14" />
                <ComboBoxItem Content="15" />
                <ComboBoxItem Content="16" />
                <ComboBoxItem Content="17" />
                <ComboBoxItem Content="18" />
                <ComboBoxItem Content="19" />
                <ComboBoxItem Content="20" />
            </ComboBox>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <TextBlock Text="Size: " />
            <ComboBox Name="SizeBox" SelectedIndex="0" Width="80" HorizontalAlignment="Right">
                <ComboBoxItem Content="3x3" />
                <ComboBoxItem Content="5x5" />
                <ComboBoxItem Content="7x7" />
                <ComboBoxItem Content="9x9" />
                <ComboBoxItem Content="11x11" />
                <ComboBoxItem Content="13x13" />
                <ComboBoxItem Content="15x15" />
                <ComboBoxItem Content="17x17" />
                <ComboBoxItem Content="19x19" />
            </ComboBox>
        </DockPanel>
        <DockPanel Style="{StaticResource PanelStyle}">
            <Button Name="CancelBtn" Click="CancelBtn_Click" Content="Cancel" />
            <Button Name="OkBtn" Click="OkBtn_Click" Content="Ok" HorizontalAlignment="Right" />
        </DockPanel>
    </StackPanel>
</UserControl>
